{
  "background": {
    "scripts": ["background.js"]
  },
  
  "browser_action": {
    "default_title": "Bookmark",
    "default_popup": "popup.html"
  },

  "icons": {
    "48": "icon.png",
    "96": "icon@2x.png"
  },

  "manifest_version": 2,
  "name": "Smart Bookmark",
  "description": "Smart bookmark that saves your place in the page.",

  "permissions": [
    "bookmark",
    "*://*",
    "webNavigation"
  ],

  "version": "1.0"
}
